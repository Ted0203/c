#include <iostream>
#include <cstdlib>
using namespace std;

int add(int a, int b)
{
    int sum;
    
    sum=a+b;
    return sum;
}

float add(float a, float b)
{
    float c;
    
    c=a+b;
    return c;
}

int main()
{
    int sum1, a=5, b=3;
    float sum2, c=3.2f, d=5.5f;
    
    sum1=add(a,b);
    cout<<a<<"+"<<b<<"="<<sum1<<endl;
    sum2=add(c,d);
    cout<<c<<"+"<<d<<"="<<sum2<<endl;

    return 0;
}

//output:
5+3=8
3.2+5.5=8.7
