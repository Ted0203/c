#include <stdio.h>
#include <stdlib.h>
#define enter 13
#define max 20


int main()
{
    FILE *ptr;
    char str[max], ch;
    int i=0;
    
    ptr=fopen("C:\\Users\\ted.chiang\\Desktop\\121.txt","a");
    printf("ENTER string:");
    if(ptr!=NULL)
    {
      while((ch=getche())!=enter&&i<max)
        str[i++]=ch;
      putc('\n',ptr);
      fwrite(str,sizeof(ch),i,ptr);
      fclose(ptr);
      printf("write in success.");  
    }
    else
      printf("open fail.\n");
    return 0;
}

//output:
write in success.
