#include <stdio.h>
#include <stdlib.h>
#define size 100


int main()
{
    int i=0;
    char str[size];
    FILE *ptr1, *ptr2;
    ptr1=fopen("C:\\Users\\USER1\\Desktop\\121.txt","r");
    ptr2=fopen("C:\\Users\\USER1\\Desktop\\122.txt","w");
    
    if(ptr1!=NULL&&ptr2!=NULL)
    {
        while(fgets(str,size,ptr1)!=NULL)
            fputs(str,ptr2);
        fclose(ptr1);
        fclose(ptr2);
        printf("copy success.\n");
    }
    else
        printf("open fail.\n");

    return 0;
}


//output:
copy success.
