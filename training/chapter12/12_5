#include <stdio.h>
#include <stdlib.h>



int main()
{
    int i=0;
    char str[];
    FILE *ptr1, *ptr2;
    ptr1=fopen("C:\\Users\\ted.chiang\\Desktop\\121.txt","r");
    ptr2=fopen("C:\\Users\\ted.chiang\\Desktop\\122.txt","w");
    
    if(ptr1!=NULL&&ptr2!=NULL)
    {
        while(fgets(str,1,ptr1)!=NULL)
        {
            putc(str,ptr2);
            i++;
        }
        fclose(ptr1);
        fclose(ptr2);
        printf("total copy %d char.\n", i);
    }
    else
        printf("open fail.\n");

    return 0;
}

//output:
total copy 30 char.
